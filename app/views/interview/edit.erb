<div class="container">
  <div class="page-header">
    <h1>Edit Interview Information</h1>
  </div>
  <h3>Application for <%= @interview.application.title %> at <%= @interview.application.company.name %></h3>

  <form action="/interviews/<%= @interview.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="put">
    <div class="form-group">
      <label for="date">Date and Time (ex: '8/6/1991 at 1:30pm' OR 'tomorrow at noon'):</label>
      <input type="text" id="date" name="date" value="<%= @interview.date.localtime.strftime("%-m/%-d/%Y at %-l:%M%P") %>" class="form-control" required autofocus>
    </div>
    <div class="form-group">
      <label for="thank_yous_sent">Thank Yous Sent On (enter date):</label>
      <input type="text" id="thank_yous_sent" name="thank_yous_sent" value="<%= @interview.thank_yous_sent.nil? ? "N/A" : @interview.thank_yous_sent.localtime.strftime("%-m/%-d/%Y") %>" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>