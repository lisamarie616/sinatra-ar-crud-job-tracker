<div class="container">
  <div class="page-header">
    <h1>Add Interview Information</h1>
  </div>
  <h3>Application for <%= @application.title %> at <%= @application.company.name %></h3>

  <form action="/interviews" method="post">
    <input type="hidden" value="<%= @application.id %>" name="application_id">
    <div class="form-group">
      <label for="date">Date and Time (ex: '8/6/1991 at 1:30pm' OR 'tomorrow at noon'):</label>
      <input type="text" id="date" name="date" class="form-control" required autofocus>
    </div>
    <div class="form-group">
      <label for="thank_yous_sent">Thank Yous Sent On (enter date):</label>
      <input type="text" id="thank_yous_sent" name="thank_yous_sent" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>