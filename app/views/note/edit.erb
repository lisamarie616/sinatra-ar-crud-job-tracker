<div class="container">
  <div class="page-header">
    <h1>Edit Note</h1>
  </div>
  <h3>Application for <%= @note.application.title %> at <%= @note.application.company.name %></h3>

  <form action="/notes/<%= @note.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="put">
    <div class="form-group">
      <label for="date">Date:</label>
      <input type="text" id="date" name="date" value="<%= @note.date.nil? ? "N/A" : @note.date.localtime.strftime("%-m/%-d/%Y") %>" class="form-control" autofocus>
    </div>
    <div class="form-group">
      <textarea name="notes" id="notes" cols="30" rows="10" class="form-control" required><%= @note.notes %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Edit Note</button>
  </form>
</div>